<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/MacthWrapLayout"
              android:background="@color/bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@mipmap/cp_bgb"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_invest_name"
               style="@style/TwoWrapLayout"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size24"
                android:textStyle="bold"/>


            <TextView
                android:layout_gravity="center_vertical"
                style="@style/TwoWrapLayout"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size24"
                android:text="第"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_invest_number"
                style="@style/TwoWrapLayout"
                android:layout_gravity="center_vertical"
                android:textColor="@color/e_red"
                android:textSize="@dimen/text_size24"/>

            <TextView
                android:id="@+id/textview_qi"
                style="@style/TwoWrapLayout"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size24"
                android:layout_gravity="center_vertical"
                android:text="期"
                android:textStyle="bold"/>

            <RelativeLayout
              style="@style/TwoMatchLayout">
                <Button
                    android:id="@+id/btn_item_hot"
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/cp_cjhl"
                    android:visibility="gone"
                    android:focusable="false"/>

                <Button
                    android:id="@+id/button_item_hot"
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rect_red"
                    android:focusable="false"
                    android:text="HOT"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="invisible"/>


                <Button
                    android:id="@+id/btn_invest_out"
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shap_invest"
                    android:focusable="false"
                    android:text="已售馨"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_invest_newhand"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/cp_xsb"
                    android:focusable="false"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@mipmap/cp_bg"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/TwoWrapLayout"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invest_precemt"
                    style="@style/TwoWrapLayout"
                    android:layout_gravity="center_horizontal"
                    android:text="9.00%"
                    android:textColor="#e23b04"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/textview_nianlilu"
                    style="@style/TwoWrapLayout"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/zhsyl"
                    android:textColor="@color/a_five"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/TwoWrapLayout"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/TwoWrapLayout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_invest_time"
                        style="@style/TwoWrapLayout"
                        android:textColor="@color/three_a"
                        android:textSize="@dimen/text_size28"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_invest_date"
                        style="@style/TwoWrapLayout"
                        android:textColor="@color/three_a"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/textview_qixian"
                    style="@style/TwoWrapLayout"
                    android:layout_gravity="center_horizontal"
                    android:text="期限"
                    android:textColor="@color/a_five"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/TwoWrapLayout"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <com.whale.beewin.view.CircleProgressView
                    android:id="@+id/progressbar_invest"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:clickable="false"
                    android:focusable="false"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>