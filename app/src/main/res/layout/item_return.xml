<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_return"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/rect_green1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_return_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left24"
            android:textColor="@color/six_color"
            android:textSize="@dimen/text_size26"/>

        <TextView
            android:id="@+id/tv_return_sum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/six_color"
            android:textSize="@dimen/text_size26"/>

        <TextView
            android:id="@+id/tv_return_gain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/margin_right24"
            android:textColor="@color/six_color"
            android:textSize="@dimen/text_size26"/>
    </LinearLayout>
</LinearLayout>