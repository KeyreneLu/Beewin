<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_inform_month"
            style="@style/myOrangeWeiLayout"
           android:textColor="@color/three_color"/>
        <TextView
            android:id="@+id/tv_inform_corpus"
            android:textColor="@color/three_color"
            style="@style/myOrangeWeiLayout"
            />
        <TextView
            android:id="@+id/tv_inform_interest"
            style="@style/myOrangeWeiLayout"
            android:textColor="@color/three_color"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/tv_inform_corpusSum"
            style="@style/myOrangeWeiLayout"
            android:textColor="@color/three_color"/>
        <TextView
            android:id="@+id/tv_inform_interestSum"
            style="@style/myOrangeWeiLayout"
            android:textColor="@color/three_color"/>
        <TextView
            android:id="@+id/tv_inform_extra"
            style="@style/myOrangeWeiLayout"
            android:textColor="@color/three_color"/>
    </LinearLayout>
</LinearLayout>