<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/liaojiejiekuanLinear"
              style="@style/TwoMatchLayout"
              android:background="@color/bg"
              android:gravity="center"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/touzi_fenshu">

        <ImageView
            android:id="@+id/iv_home_left"
            style="@style/TwoWrapLayout"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back_left_big"/>

        <TextView
            style="@style/TwoWrapLayout"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/jkgz"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size36"/>
    </RelativeLayout>

    <ScrollView
        style="@style/TwoMatchLayout">

        <LinearLayout
            style="@style/TwoMatchLayout"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/TwoMatchLayout">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/jiekuan_liaojiefy"/>

                <Button
                    android:id="@+id/btn_loan_now"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="100dp"
                    android:background="@null"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
