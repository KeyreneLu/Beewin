<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TwoMatchLayout"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/touzi_fenshu">

        <ImageView
            android:id="@+id/iv_home_left"
            style="@style/TwoWrapLayout"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back_left_big"/>

        <TextView
            style="@style/TwoWrapLayout"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/fyst"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size36"/>
    </RelativeLayout>

    <View
        style="@style/xian"
        android:layout_marginTop="8dp"/>

    <ScrollView
        style="@style/MacthWrapLayout">

        <LinearLayout
            style="@style/MacthWrapLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/TwoWrapLayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="17dp"
                    android:text="@string/gmje"
                    android:textColor="@color/three_color"
                    android:textSize="@dimen/text_size28"/>

                <TextView
                    style="@style/TwoWrapLayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/fengyingtouzi_zhuming"
                    android:textColor="@color/nine_color"
                    android:textSize="@dimen/text_size24"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/rect_gray5">

                    <TextView
                        android:id="@+id/tv_scatter_money"
                        style="@style/TwoWrapLayout"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:text="2000.00元"
                        android:textColor="@color/touzi_fenshu"
                        android:textSize="@dimen/text_size36"/>

                    <ImageButton
                        android:id="@+id/btn_money_reduce"
                        style="@style/TwoWrapLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:background="@null"
                        android:src="@drawable/touzijiner_jian"/>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/xian"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/xian"/>


                    <ImageButton
                        android:id="@+id/btn_money_add"
                        style="@style/TwoWrapLayout"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="9dp"
                        android:background="@null"
                        android:src="@drawable/touzijiner_jia"/>
                </RelativeLayout>
            </LinearLayout>

            <View style="@style/xian"/>

            <View
                style="@style/xian"
                android:layout_marginTop="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv"
                    style="@style/Three30Text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/cffs"/>


                <LinearLayout
                    style="@style/MacthWrapLayout"
                    android:layout_below="@+id/tv"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        style="@style/weightWrapLayout">

                        <ImageView
                            android:id="@+id/iv_five_part"
                            style="@style/TwoWrapLayout"
                            android:padding="5dp"
                            android:src="@drawable/agree_cai"/>

                        <TextView
                            style="@style/Three30Text"
                            android:text="@string/ff"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/weightWrapLayout">

                        <ImageView
                            android:id="@+id/iv_ten_part"
                            style="@style/TwoWrapLayout"
                            android:padding="5dp"
                            android:src="@drawable/agree_hui"/>

                        <TextView
                            style="@style/Three30Text"
                            android:text="@string/tf"/>
                    </LinearLayout>


                    <LinearLayout
                        style="@style/weightWrapLayout">

                        <ImageView
                            android:id="@+id/iv_fifteen_part"
                            style="@style/TwoWrapLayout"
                            android:padding="5dp"
                            android:src="@drawable/agree_hui"/>

                        <TextView
                            style="@style/Three30Text"
                            android:layout_marginTop="2dp"
                            android:text="@string/fff"/>
                    </LinearLayout>


                    <LinearLayout
                        style="@style/weightWrapLayout">

                        <ImageView
                            android:id="@+id/iv_twenty_part"
                            style="@style/TwoWrapLayout"
                            android:padding="5dp"
                            android:src="@drawable/agree_hui"/>

                        <TextView
                            style="@style/Three30Text"
                            android:text="@string/twf"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View style="@style/xian"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv2"
                    style="@style/Three30Text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/tfsc"/>


                <LinearLayout
                    style="@style/MacthWrapLayout"
                    android:layout_below="@+id/tv2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        style="@style/weightWrapLayout">

                        <ImageView
                            android:id="@+id/iv_three_month"
                            style="@style/TwoWrapLayout"
                            android:padding="5dp"
                            android:src="@drawable/agree_cai"/>

                        <TextView
                            style="@style/Three30Text"
                            android:text="3个月"/>
                    </LinearLayout>


                    <LinearLayout
                        style="@style/weightWrapLayout">

                        <ImageView
                            android:id="@+id/iv_six_month"
                            style="@style/TwoWrapLayout"
                            android:padding="5dp"
                            android:src="@drawable/agree_hui"/>

                        <TextView
                            style="@style/Three30Text"
                            android:text="6个月"/>
                    </LinearLayout>


                    <LinearLayout
                        style="@style/weightWrapLayout">

                        <ImageView
                            android:id="@+id/iv_twelve_month"
                            style="@style/TwoWrapLayout"
                            android:padding="5dp"
                            android:src="@drawable/agree_hui"/>

                        <TextView
                            style="@style/Three30Text"
                            android:text="12个月"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/weightWrapLayout"/>

                </LinearLayout>
            </RelativeLayout>

            <View style="@style/xian"/>

            <View
                style="@style/xian"
                android:layout_marginTop="6dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    style="@style/Three30Text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/nhll"/>


                <TextView
                    android:id="@+id/tv_scatter_precent"
                    style="@style/TwoWrapLayout"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="10.39%"
                    android:textColor="@color/two_seven"/>

            </RelativeLayout>

            <View
                style="@style/xian"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <TextView
                    style="@style/Three30Text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/yjsy"/>

                <TextView
                    android:id="@+id/tv_scatter_lucre"
                    style="@style/TwoWrapLayout"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="35.00元"
                    android:textColor="@color/two_seven"/>
            </RelativeLayout>

            <View
                style="@style/xian"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    style="@style/Three30Text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/hkfs"/>

                <TextView
                    style="@style/Three30Text"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/debxfq"/>
            </RelativeLayout>
            <View
                style="@style/xian"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    style="@style/Three30Text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/myhk"/>


                <TextView
                    android:id="@+id/tv_scatter_back"
                    style="@style/TwoWrapLayout"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="678.33元"
                    android:textColor="@color/two_seven"/>
            </RelativeLayout>


            <View
                style="@style/xian"/>

            <View
                style="@style/xian"
                android:layout_marginTop="6dp"/>


            <RelativeLayout
                android:id="@+id/rl_scatter_cash"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    style="@style/Three30Text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/djj"/>


                <ImageView
                    android:id="@+id/iv"
                    style="@style/MyImageViewStyle"/>


                <TextView
                    android:id="@+id/tv_cash_money"
                    style="@style/TwoWrapLayout"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv"
                    android:text="0元"
                    android:textColor="@color/touzi_fenshu"/>
            </RelativeLayout>


            <View
                style="@style/xian"/>


            <View
                style="@style/xian"
                android:layout_marginTop="6dp"/>

            <LinearLayout
                style="@style/MacthWrapLayout"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/Three30Text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/zffs"/>


                <LinearLayout
                    style="@style/MacthWrapLayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_wallet_pay"
                        style="@style/TwoWrapLayout"
                        android:padding="5dp"
                        android:src="@drawable/agree_cai"/>

                    <TextView
                        style="@style/Three30Text"
                        android:layout_marginLeft="7dp"
                        android:text="@string/qbye"/>

                    <TextView
                        style="@style/Three30Text"
                        android:layout_marginLeft="7dp"
                        android:text="("/>

                    <TextView
                        android:id="@+id/tv_wallet_money"
                        style="@style/TwoWrapLayout"
                        android:text="1024.88"
                        android:textColor="#E97110"/>


                    <TextView
                        style="@style/Three30Text"
                        android:text="@string/kyk"/>

                </LinearLayout>


                <LinearLayout
                    style="@style/MacthWrapLayout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_card_pay"
                        style="@style/TwoWrapLayout"
                        android:padding="5dp"
                        android:src="@drawable/agree_hui"/>

                    <TextView
                        style="@style/Three30Text"
                        android:layout_marginLeft="7dp"
                        android:text="@string/bankcard"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                style="@style/MacthWrapLayout"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <LinearLayout
                    style="@style/MacthWrapLayout"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/tv_protocol"
                        style="@style/TwoWrapLayout"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:padding="5dp"
                        android:src="@drawable/agree_cai"
                        android:visibility="visible"/>


                    <TextView
                        style="@style/TwoWrapLayout"
                        android:text="@string/wydyty"
                        android:textColor="@color/six_color"
                        android:textSize="@dimen/text_size24"/>


                    <TextView
                        android:id="@+id/tv_loan_protocol"
                        style="@style/TwoWrapLayout"
                        android:text="@string/jdfwxy"
                        android:textColor="@color/touzi_fenshu"
                        android:textSize="@dimen/text_size24"/>

                    <TextView
                        android:id="@+id/tv_scatter_protocol"
                        style="@style/TwoWrapLayout"
                        android:text="@string/stfwxy"
                        android:textColor="@color/touzi_fenshu"
                        android:textSize="@dimen/text_size24"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_join_now"
                   style="@style/myOrangeButton"
                    android:text="@string/qrjr"
                    android:textSize="@dimen/text_size36"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
