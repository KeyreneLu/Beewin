<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/TwoMatchLayout"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_week"
                style="@style/TwoWrapLayout"
                android:text="星期一"
                android:textColor="@color/nine_color"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_time"
                style="@style/TwoWrapLayout"
                android:text="08-01"
                android:textColor="@color/nine_color"
                android:textSize="12sp"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"/>


        <LinearLayout
            android:id="@+id/linear_zhangdan_leixing"
            style="@style/WrapMatchLayout"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coin_number"
                style="@style/TwoWrapLayout"
                android:text="5"
                android:textColor="@color/three_color"
                android:textSize="@dimen/text_size36"/>

            <TextView
                android:id="@+id/tv_coin_way"
                style="@style/TwoWrapLayout"
                android:text="转盘抽奖"
                android:textColor="@color/three_color"
                android:textSize="@dimen/text_size28"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
