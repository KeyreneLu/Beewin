<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   style="@style/TwoMatchLayout"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/MacthWrapLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="21.5dp"
            android:background="@color/lucency">
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="211.5dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/xsxhl_png"/>

        <ImageView
            android:id="@+id/iv_home_left"
            style="@style/TwoWrapLayout"
            android:layout_marginTop="21.5dp"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/back_left_big"
            android:visibility="visible"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/rect_gray7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <com.whale.beewin.view.RoundImageView
                android:id="@+id/iv_user_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                app:ml_border_color="@color/white"
                app:ml_shape_type="round"/>

            <LinearLayout
                style="@style/TwoWrapLayout"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/TwoWrapLayout"
                    android:layout_gravity="center_vertical"
                    android:text="张先生"
                    android:textColor="#333333"
                    android:textSize="12sp"/>


                <TextView
                    style="@style/TwoWrapLayout"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:text="@string/fenxiangshuoming"
                    android:textColor="#333333"
                    android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>


        <View
            style="@style/xian"
            android:layout_marginTop="60dp"/>
        <ImageView
            android:id="@+id/iv_QR_Code"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"/>

        <LinearLayout
           style="@style/MacthWrapLayout"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="205dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TwoWrapLayout"
                android:text="您的邀请码:"
                android:textColor="@color/six_color"
                android:textSize="@dimen/text_size26"/>

            <TextView
                android:id="@+id/tv_invite_code"
               style="@style/TwoWrapLayout"
                android:layout_marginLeft="8dp"
                android:textColor="@color/six_color"
                android:textSize="@dimen/text_size26"/>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_share_now"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/rect_orange_selector"
        android:text="立即分享"
        android:textColor="@color/white"
        android:textSize="18sp"/>

</LinearLayout>
