<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/touzi_fenshu">

        <ImageView
            android:id="@+id/iv_home_left"
            style="@style/TwoWrapLayout"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back_left_big"/>

        <TextView
            style="@style/TwoWrapLayout"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/stjs"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size36"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/head"
        style="@style/TwoMatchLayout">
            <LinearLayout
                style="@style/TwoMatchLayout"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv1"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>
                <ImageView
                    android:id="@+id/iv2"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>

                <ImageView
                    android:id="@+id/iv3"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>

                <ImageView
                    android:id="@+id/iv4"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>
                <ImageView
                    android:id="@+id/iv5"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>
                <ImageView
                    android:id="@+id/iv6"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>
                <ImageView
                    android:id="@+id/iv7"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp">
                    <ImageView
                        android:id="@+id/iv8"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"/>
                    <TextView
                        android:id="@+id/tv_scatter_now"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </RelativeLayout>
            </LinearLayout>
    </ScrollView>
</LinearLayout>