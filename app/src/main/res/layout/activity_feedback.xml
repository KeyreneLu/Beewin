<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/TwoMatchLayout"
              android:background="@color/bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/touzi_fenshu">

        <ImageView
            android:id="@+id/iv_home_left"
            style="@style/TwoWrapLayout"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back_left_big"/>

        <TextView
            style="@style/TwoWrapLayout"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/yjfk"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size36"/>
    </RelativeLayout>

    <View style="@style/xian"/>

    <View
        style="@style/xian"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_below="@+id/fb_xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_gray"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <EditText
            android:id="@+id/et_feed_back"
            android:background="@null"
            android:paddingLeft="@dimen/margin_left24"
            android:paddingRight="@dimen/margin_right24"
            android:paddingTop="@dimen/margin_left24"
            android:gravity="top"
            android:textColor="@color/three_color"
            android:textSize="@dimen/text_size30"
            android:hint="@string/fbhint"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        style="@style/MySureButton"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/tj"/>

</LinearLayout>