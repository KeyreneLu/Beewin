<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/TwoMatchLayout"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/touzi_fenshu">

        <ImageView
            android:id="@+id/iv_home_left"
            style="@style/TwoWrapLayout"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back_left_big"/>

        <TextView
            android:id="@+id/title"
            style="@style/TwoWrapLayout"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/hkztsm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size36"/>
    </RelativeLayout>

    <LinearLayout
      style="@style/MacthWrapLayout"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_left24"
        android:paddingRight="@dimen/margin_right24"
        android:paddingTop="30dp">

        <LinearLayout
            style="@style/MacthWrapLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/rect_green1"/>

            <TextView
                style="@style/TwoWrapLayout"
                android:layout_marginLeft="12dp"
                android:text="@string/yhm"
                android:textColor="@color/four_d"
                android:textSize="@dimen/text_size30"/>
        </LinearLayout>

        <TextView
            style="@style/MacthWrapLayout"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:text="@string/brule1"
            android:textColor="@color/six_color"
            android:textSize="@dimen/text_size30"/>

        <LinearLayout
            style="@style/MacthWrapLayout"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/rect_gray1"/>

            <TextView
                style="@style/TwoWrapLayout"
                android:layout_marginLeft="12dp"
                android:text="@string/wdqm"
                android:textColor="@color/nine_color"
                android:textSize="@dimen/text_size30"/>
        </LinearLayout>

        <TextView
            style="@style/MacthWrapLayout"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:text="@string/brule2"
            android:textColor="@color/six_color"
            android:textSize="@dimen/text_size30"/>

        <LinearLayout
            style="@style/MacthWrapLayout"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/rect_red1"/>

            <TextView
                style="@style/TwoWrapLayout"
                android:layout_marginLeft="12dp"
                android:text="@string/yqm"
                android:textColor="@color/d_c"
                android:textSize="@dimen/text_size30"/>
        </LinearLayout>

        <TextView
            style="@style/MacthWrapLayout"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="12dp"
            android:text="@string/brule3"
            android:textColor="@color/six_color"
            android:textSize="@dimen/text_size30"/>
    </LinearLayout>

    <View style="@style/xian"
          android:background="@color/six_color"
          android:layout_marginTop="30dp"/>

    <TextView
        android:layout_marginTop="15dp"
        style="@style/MacthWrapLayout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="@dimen/text_size26"
        android:textColor="@color/six_color"
        android:lineSpacingExtra="3dp"
        android:text="@string/brule4"/>
</LinearLayout>